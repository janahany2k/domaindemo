<!DOCTYPE html>
<html xmlns:ng="http://angularjs.org" id="ng-app" ng-app="app">
<head>
    <base href="@Url.Content("~/")" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Domain Demo</title>

    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="lib/angular-toastr/dist/angular-toastr.css" />
    <link rel="stylesheet" href="css/site.css" />
</head>
<body ng-controller="domainCtrl as vm">
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Domain Demo</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Home</a></li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container body-content">
    <div class="row">
        <div class="col-xs-12">
            <form class="form-inline text-right">
                <div class="form-group">
                    <input type="text" class="form-control" id="domain" name="domain" ng-model="vm.domain" placeholder="domain e.g. yahoo.com" required>
                </div>
                <div class="form-group">
                    <select class="form-control" ng-model="vm.enumerate" required>
                        <option>10</option>
                        <option>20</option>
                        <option>30</option>
                        <option>40</option>
                        <option>50</option>
                    </select>
                </div>
                <button type="button" class="btn btn-default" ng-click="vm.getSubdomains()">List Subdomains</button>
                <button type="button" class="btn btn-default" ng-click="vm.findIpAddresses()">Find IP Addresses</button>
            </form>
        </div>
    </div>
    
    <div class="row">
        <div class="col-xs-12 margin-top">
            <table class="table">
                <thead>
                <tr>
                    <th class="col-xs-2">#</th>
                    <th class="col-xs-5">Subdomain</th>
                    <th class="col-xs-5">IP Addresses</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="subdomain in vm.subdomains">
                    <td>{{$index}}</td>
                    <td>{{subdomain.url}}</td>
                    <td>{{subdomain.ipAddress}}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div ui-view></div>
</div><!-- /.container -->

    @* Vendor javascript libraries *@
    <script src="lib/jquery/dist/jquery.js"></script>
    <script src="lib/angular/angular.js"></script>
    <script src="lib/angular-toastr/dist/angular-toastr.tpls.js"></script>
    
@* Site specific javascript libraries *@
    <script src="js/app.js"></script>
    <script src="js/services/domain.js"></script>
    <script src="js/controllers/domain.js"></script>
    
    <script>
        angular.module("app")
            .constant("serverRoot", "@Url.Content("~/")");
    </script>
</body>
</html>